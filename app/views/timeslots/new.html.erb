<div class="container text-center my-5">
  <div class="row">
    <div class="col-sm">
      <h1>Add a timeslot</h1>
      <p class="mb-5">Pick a time and click save</p>
      <%= simple_form_for @timeslot, url: timeslots_path, method: 'post' do |f| %>

        <%= f.input :start_time, as: :string, input_html: {class: 'datepicker'} %>

        <%= f.button :submit, 'Save', class: 'btn-skill' %>
      <% end %>
    </div>
  </div>
</div>

<div style="height: 500px"></div>
