<div class="form-container container">
  <h2>Edit Profile</h2>

  <%= simple_form_for(current_user, url: user_path(current_user), method: 'patch') do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "first name" }%>
      <%= f.input :last_name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "last name" }%>
      <%= f.input :photo, as: :file %>
      <%= f.input :bio,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "bio" }%>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Edit", class: "btn btn-primary" %>
    </div>
  <% end %>
  <%= link_to 'Back', user_path(current_user), class: 'btn btn-primary' %>

</div>
