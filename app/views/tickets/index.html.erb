<h1>Your Tickets</h1>

<% unless @student_tickets.first.nil? %>
  <h2>Tickets as a student</h2>
  <ul>
    <% @student_tickets.each do |ticket| %>
      <li>
        <%= ticket.description %> <strong>with <%= ticket.timeslot.user.first_name %></strong> at precisely <%= ticket.timeslot.start_time %>
        <%= link_to 'cancel ticket', ticket_path(ticket), method: :delete, data: {confirm: 'Are you sure you want to cancel this ticket?'}, class: 'btn btn-sm btn-dark' %>
      </li>
    <% end %>
  </ul>
<% end %>

