<div class="container text-center my-5">
  <div class="row">
    <div class="col-sm">
      <h1>Select your dev skills</h2>
      <p class="mb-5">You can always come back and edit</p>
      <%= simple_form_for current_user, url: user_skills_path, method: 'post' do |f| %>
        <%= f.association :skills, input_html: {class:'multiple-select form-control form-control-lg'}, include_hidden: false, label: false %>
        <div class="buttons mt-4">
          <%= f.button :submit, 'Save Skills', class: 'btn-skill' %>
          <%= link_to 'Skip', current_user, class: 'btn-skip' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div style="height: 500px"></div>
